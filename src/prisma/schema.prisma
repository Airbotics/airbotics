generator client {
    provider            = "prisma-client-js"
    previewFeatures     = ["interactiveTransactions"]
}

datasource db {
    provider            = "postgresql"
    url                 = env("POSTGRES_CONN_STR")
}

enum ObjectStatus {
    uploading
    uploaded
}

// namespace to contain all resources (metadata, ecus, manifests, images, etc.) related to the same project
model Namespace {
    id                  String          @id @default(uuid()) @unique

    created_at          DateTime        @default(now())
    updated_at          DateTime        @updatedAt

    @@map("namespaces")
}


// ostree references
model Ref {
    namespace           String
    name                String
    commit              String
    object_id           String

    created_at          DateTime        @default(now())
    updated_at          DateTime        @updatedAt

    object              Object          @relation(fields: [namespace, object_id], references: [namespace, object_id], onDelete: Cascade)

    @@id([namespace, name])
    @@map("refs")
}

// ostree object
model Object {
    object_id           String
    namespace           String
    size                BigInt
    status              ObjectStatus

    created_at          DateTime        @default(now())
    updated_at          DateTime        @updatedAt

    refs                Ref[]

    @@id([namespace, object_id])
    @@map("objects")
}