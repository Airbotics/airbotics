{
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "strictNullChecks": true
    },
    "include": [
        "./src/"
    ]
}